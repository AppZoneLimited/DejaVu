<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/login_transculsent"
    android:weightSum="2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/zone_orange"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:layout_margin="15dp"
                    android:text="ZONE"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.pkmmte.view.CircularImageView
                    app:border="true"
                    app:border_color="#ddd"
                    app:border_width="2dp"
                    android:id="@+id/contactImage"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:src="@drawable/pix" />

                <TextView
                    android:id="@+id/welcomeText"
                    android:textColor="#ddd"
                    android:gravity="center"
                    android:textSize="26dp"
                    android:layout_margin="15dp"
                    android:text="@string/welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content">

                <dejavu.appzonegroup.com.dejavuandroid.CustomViews.CustomEdit
                    android:maxLength="10"
                    android:textSize="24sp"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@null"
                    android:padding="15dp"
                    android:imeOptions="actionDone"
                    android:background="@android:color/black"
                    android:hint="@string/password_auth_text"
                    android:textColorHint="#333"
                    android:id="@id/password_field"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>